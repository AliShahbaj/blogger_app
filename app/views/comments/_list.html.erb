<h3>Comments</h3>
<div class="post_<%= post.id %>">
  <% comments.each do |comment| %>
    <div id="comment_<%= comment.id %>">
      <% if !comment.parent_id.present? %>
      <p class="m-0">
        <span><%= comment.body %> <%= link_to 'reply', new_post_comment_path(post, parent_id: comment.id), remote: true %></span>
      </p>
      <em><%= comment.post.user.email %> - <%= comment.created_at.to_formatted_s(:short) %></em>
      <% end %>
      <div id="replies_<%= comment.id %>">
        <% if comment.replies.any? %>
          <% comment.replies.each do |reply| %> 
            <%= render partial: 'comments/reply', locals: { reply: reply } %>
          <% end %>
        <% end %>
      </div>
      <hr>
    </div>
    <div id="reply-form-<%= comment.id %>"></div>
  <% end %>
</div>